{
	"name": "tatter/themes",
	"type": "library",
	"description": "Lightweight theme manager for CodeIgniter 4",
	"keywords": [
		"codeigniter",
		"codeigniter4",
		"themes",
		"css"
	],
	"homepage": "https://github.com/tattersoftware/codeigniter4-themes",
	"license": "MIT",
	"authors": [
		{
			"name": "Matthew Gatner",
			"email": "mgatner@tattersoftware.com",
			"homepage": "https://tattersoftware.com",
			"role": "Developer"
		}
	],
	"require": {
		"php": "^7.3 || ^8.0",
		"tatter/settings": "^1.0"
	},
	"require-dev": {
		"codeigniter4/codeigniter4": "dev-develop",
		"tatter/tools": "^1.8"
	},
	"autoload": {
		"psr-4": {
			"Tatter\\Themes\\": "src"
		},
		"exclude-from-classmap": [
			"**/Database/Migrations/**"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\Support\\": "tests/_support"
		}
	},
	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/codeigniter4/CodeIgniter4"
		}
	],
	"minimum-stability": "dev",
	"prefer-stable": true,
	"scripts": {
		"analyze": "phpstan analyze",
		"mutate": "infection --threads=2 --skip-initial-tests --coverage=build/phpunit",
		"style": "phpcbf --standard=./vendor/codeigniter4/codeigniter4-standard/CodeIgniter4 tests/ src/",
		"test": "phpunit"
	}
}
